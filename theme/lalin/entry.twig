<div class="container">
      <div class="row">

        <div class="col-md-8">
            <h1>{{ record.title }}</h1>

            {% if record.image!="" %}
                <section style="background-image: url({{ image(record.image) }})" class="parallax">                    
                </section>
            {% endif %}            
            
            <br/>

            {{ record.body }}
       </div>

       <div class="col-md-4">
          <div class="well">
            
            {% include '_aside.twig' %}

          </div>
        </div>

    </div>
</div>

<hr/>

